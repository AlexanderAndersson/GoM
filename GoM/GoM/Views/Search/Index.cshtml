@model List<GoM.Models.Album>

@{
    Layout="~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<div class="container margin-top-30">
    <div class="row">
        @foreach(var album in Model)
            {
            <div class="col-md-4 margin-top-30">
                <a href="#" class="thumbnail">
                    <img src="@album.ImageSource" />
                </a>
                <h3>@album.Artist - @album.Title</h3>
                <h4>Price: $@album.Price</h4>
                <h4>Genre: @album.Genre</h4>
                <p>Number Of Tracks: @album.NumberOfSongs</p>
                <p>In Stock: @album.InStock</p>
                @if(album.InStock>0)
                    {
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-shopping-cart"></span> @Html.ActionLink("Add To Cart", "AddToCart", new { album.Id })</button>
                    }

                else
                    {
                    <h4 class="text-danger">Out of stock</h4>
                    }
            </div>
            }

    </div>
</div>
