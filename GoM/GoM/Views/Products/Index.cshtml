@model IEnumerable<GoM.Models.Album>

@{
    ViewBag.Title = "Products";
}

<div class="container margin-top-30 product">
    <div class="row">
        @foreach (var album in Model)
            {
            <div class="col-md-4 margin-top-30">
                <a href="#" class="thumbnail">
                    <img src="@album.ImageSource" />
                </a>
                <h3>@album.Artist - @album.Title</h3>
                <h4>Price: $@album.Price</h4>
                <h4>Genre: @album.Genre</h4>
                <p>Number Of Tracks: @album.NumberOfSongs</p>
                <p>In Stock: @album.InStock</p>
                @if (album.InStock > 0)
                {
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-shopping-cart">
                    @*Lagt till returnURL som skickar med URL addressen, hade problem med jag hamnade på product.index när jag adda saker jag sökt*@    
                    </span> @Html.ActionLink("Add To Cart", "AddToCart", "Products", new { album.Id, returnUrl = Request.RawUrl }, null)</button>
                }

                else
                {
                    <h4 class="text-danger">Out of stock</h4>
                }
            </div>
        }

    </div>
</div>
