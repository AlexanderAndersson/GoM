@using GoM.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Good ol' Music</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet" type="text/css">
    <link href="~/Content/jquery.fancybox.css" rel="stylesheet" />
</head>
<body>
    <nav id="navigationbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarcollapse" aria-expanded="true">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">
                    <img class="logo" src="../Images/logo2.png" style="height:auto; width:50px;" alt="Logo">
                </a>
            </div>

            <div class="navbar-collapse collapse" id="navbarcollapse" aria-expanded="true">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Products/Index">All Products</a></li>
                            <li><a href="~/Products?SearchText=Rock">Rock</a></li>
                            <li><a href="~/Products?SearchText=Pop">Pop</a></li>
                            <li><a href="~/Products?SearchText=Blues">Blues</a></li>
                            <li><a href="~/Products?SearchText=Soul">Soul</a></li>
                            <li><a href="~/Products?SearchText=HipHop">Hip Hop</a></li>
                            <li><a href="~/Products?SearchText=Reggae">Reggae</a></li>
                            <li><a href="~/Products?SearchText=Grunge">Grunge</a></li>
                        </ul>
                    </li>
                    <li>
                        @*Sökrutan expanderar. Inte klar med css än men du kan flytta den var du vill*@
                        @using(Html.BeginForm("Index", "Products", FormMethod.Get))
                            {

                            @Html.TextBox("SearchText", null, new { @class = "search-box" })

                            <label for="search-box"><i class="fa fa-search search-icon text-center" style="color: darkgray"></i></label>
                            <input type="submit" id="search-submit" />

                            }
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if(Database.Account==null)
                        {
                        <li><a href="/Account/Register">Register</a></li>
                        <li><a href="/Account/LogIn">Log In</a></li>
                        }
                    else
                        {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                                @Database.Account.ShoppingCart.NumberOfProducts
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" style="padding-left:10px;padding-right:10px;">
                                @foreach(var product in Database.Account.ShoppingCart.Products)
                                    {
                                    <li>
                                        <span style="font-size:15px;">@product.Album.Artist</span><br />
                                        <span style="opacity:0.7">
                                            @product.Album.Title
                                        </span><br />
                                        <span class="right pull-right" style="opacity:0.7;">$@product.Album.Price</span>

                                        <br />
                                    </li>
                                    <li class="divider"></li>

                                    }
                                <li>
                                    <a href="/Checkout/Cart" class="text-center">
                                        <i class="fa fa-shopping-basket" style="color:#f39c12;">
                                            View Cart
                                        </i>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li><a href="/Account/Manage">@Database.Account.FirstName</a></li>
                        <li><a href="/Account/LogOff">Log off</a></li>
                        }

                </ul>


            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">

        @RenderBody()
    </div>
       @if(Request.RawUrl.Contains("Search") ||Request.RawUrl.Contains("Products")|| Request.RawUrl.Contains("Index"))
           {
               <footer class="footer1">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <h3>About Us</h3>
                            <img class="logo" src="../Images/logo3.png" style="height:auto; width:50px;float:left; margin:-2px;" alt="Logo" />
                            <p> is a music family and store. We sell all your favorite ol' music, no one needs any of that fancy spotify stuff when you got MAC store a few clicks away. </p>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h3>That's what she said</h3>
                            <article>
                                <blockquote>
                                    I didn't choose the thug life, the thug life chose me
                                </blockquote>

                                <img src="~/Images/callefooter.png" style="width:40px;height:auto;" />
                                <span><strong>Calle Sandström</strong>— Team Leader</span>

                            </article>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h3>Latest News</h3>
                            <a href="#">New albums on the website</a><br />
                            <a href="#">Review on Bob Marley's Greatest Hits</a><br />
                            <a href="#">Was Elvis a better artist than Jimi Hendrix?</a><br />
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h3>Contact Us</h3>
                            <h1>+46 76035456</h1>
                            <h4> MAC music </h4>
                            <p>
                                Elisedal 21, 412 45 <br>
                                Gothenburg,Sweden  <br>
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <a href="mailto:callesandstrom@hotmail.com">callesandstrom@hotmail.com</a>
                            </p>
                            <i class="fa fa-facebook-square fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-google-plus fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-snapchat fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
              
         
      
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <p> &copy; @DateTime.Now.Year - Good ol' Music  <a href="">Site map</a></p>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
           }

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="~/scripts/mustafasearch.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    <script src="~/scripts/jquery.fancybox.pack.js"></script>
    <script src="~/scripts/fancypant.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
